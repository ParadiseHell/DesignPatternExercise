package com.ct.simple.factoty.db;

import java.util.Arrays;
import java.util.List;

/**
 * 推荐假数据库
 * @author ChengTao
 *
 */
public class RecommendDB {
	//数据库实例
	private static RecommendDB instance = null;
	//姓名列表
	private final List<String> nameList = Arrays.asList(
			"小明",
			"小李",
			"小红",
			"小花",
			"老李",
			"老王"
			);
	//类别列表
		private final List<Integer> typeList = Arrays.asList(
				1,
				1,
				2,
				2,
				3,
				3
				);
	//私有构造函数
	private RecommendDB(){
		
	}
	/**
	 * 获取数据库实体
	 * @return
	 */
	public static RecommendDB getInstance() {
		if (instance == null) {
			synchronized (RecommendDB.class) {
				instance = new RecommendDB();
			}
		}
		return instance;
	}
}
